{
  "useConfigFiles": true,
  "router": true,
  "routerHistoryMode": false,
  "vuex": true,
  "cssPreprocessor": "sass",
  "plugins": {
    "@vue/cli-plugin-eslint": {
      "config": "prettier",
      "lintOn": ["save", "commit"]
    },
    "@vue/cli-plugin-babel": {
      "presets": [
        [
          "@vue/app",
          { "polyfills": [ "es6.promise", "es6.symbol" ] }
        ]
      ]
    },
    "babel-plugin-import": {}
  },
  "configs": {
    "vue": {
      "baseUrl": "./",
      "lintOnSave": false,
      "productionSourceMap": false
    },
    "babel": {}
  }
}